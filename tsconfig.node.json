{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noUncheckedIndexedAccess": true,
    "outDir": "./build/server",
    "paths": {
      "~/*": [
        "src/server/*"
      ]
    }
  },
  "include": [
    "src/server/**/*",
    "./eslint.config.ts",
    "webpack.config.ts",
    "config/**/*.ts"
  ]
}