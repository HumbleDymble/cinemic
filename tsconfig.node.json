{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noUncheckedIndexedAccess": true,
    "outDir": "./build/server",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/server/*"
      ]
    }
  },
  "include": [
    "src/server/**/*",
    "eslint.config.ts",
    "webpack.config.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}