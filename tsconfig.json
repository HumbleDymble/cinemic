{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/client/*"
      ],
      "~/*": [
        "src/server/*"
      ]
    }
  },
  "include": [
    "src/client/**/*",
    "eslint.config.ts",
    "webpack.config.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
